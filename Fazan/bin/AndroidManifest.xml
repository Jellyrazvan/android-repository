<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.the.dev.guys.fazan"
    android:versionCode="5"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />
    <permission 
        android:name="com.the.dev.guys.fazan.PRIVATE"/>
    
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="com.example.android.fazan.PRIVATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_bird"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.the.dev.guys.fazan.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.the.dev.guys.fazan.PlayActivity"
            android:label="@string/title_activity_play"
            android:parentActivityName="com.the.dev.guys.fazan.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.the.dev.guys.fazan.MainActivity" />
        </activity>
        <activity
            android:name="com.the.dev.guys.fazan.NameActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_name"
            android:parentActivityName="com.the.dev.guys.fazan.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.the.dev.guys.fazan.MainActivity" />
        </activity>
        <activity
            android:name="com.the.dev.guys.fazan.HighscoreActivity"
            android:label="@string/title_activity_highscore"
            android:parentActivityName="com.the.dev.guys.fazan.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.the.dev.guys.fazan.MainActivity" />
        </activity>
        <activity
            android:name="com.the.dev.guys.fazan.OptionActivity"
            android:label="@string/title_activity_option"
            android:parentActivityName="com.the.dev.guys.fazan.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.the.dev.guys.fazan.MainActivity" />
        </activity>
    </application>

</manifest>
